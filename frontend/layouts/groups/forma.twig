<div class="mt-3 mb-3">
    <div class="col-12 d-flex align-items-center">
        <h1 class="mb-0">{{ header }}</h1>
    </div>
</div>
<div>
    <div class="col-12">
        <form id="form-group">
            <div class="form-group">
                <small class="mb-1 d-block">{{ lang.pages.group.forma_nazvanie }}</small>
                <input type="text" class="form-control form-control-sm" name="header" value="{{ item.header }}" />
            </div>
            <div class="form-group">
                <small class="mb-1 d-block">{{ lang.pages.group.forma_rangeWorks }}</small>
                <input type="text" class="form-control form-control-sm" name="worktime" value="{{ item.worktime }}" />
            </div>
            <div class="form-group">
                <input type="hidden" name="id" value="{{ item.id|default(0) }}" />
                <button type="submit" class="btn btn-sm btn-success">{{ lang.pages.group.forma_save }}</button>
                <small class="javascript-status"></small>
            </div>
        </form>
    </div>
</div>