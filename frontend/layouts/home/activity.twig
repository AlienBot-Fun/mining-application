
<div class="mt-3 mb-3 ml-3">
    <h1 class="mb-0">{{ header }}</h1>
</div>

<div class="overflow-auto">

    <p class="text-primary pl-2 ml-1">{{ lang.pages.home.activity_funBasic }}</p>

    <div class="mt-3 mb-3 ml-3">
        <a class="btn btn-sm btn-primary mr-2" href="javascript:void(0)" onclick="get_accountAuth('{{ account.token }}')" >{{ lang.pages.home.activity_quitAccount }}</a>
        <a class="btn btn-sm btn-primary mr-2" href="javascript:void(0)" onclick="get_accountToken('{{ account.id }}')" >{{ lang.pages.home.activity_getToken }}</a>
        {% if mode == 'work' %}
            <a class="btn btn-sm btn-danger mr-2" href="javascript:void(0)" onclick="bender.ui.stopBenderItem( this )" data-rowid="{{ account.id }}" >{{ lang.pages.home.activity_killProccess }}</a>
        {% endif %}
    </div>  

    <p class="text-primary pl-2 ml-1">{{ lang.pages.home.activity_LogsTotay }}</p>

    <div class="mt-2 mb-2 ml-3">
        <a class="btn btn-sm btn-primary" href="javascript:void(0)" onclick="load_logs('{{ account.id }}')" >{{ lang.pages.home.activity_Upload }}</a>
    </div>

    <div class="ajax-logs d-none pre pl-3 pr-3"></div>

</div>